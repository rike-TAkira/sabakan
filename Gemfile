source 'https://rubygems.org'

gem 'rails', '3.2.8'
gem 'mysql2'

group :development, :test do
  gem 'rspec'
  gem 'rspec-rails'
end

group :production do
  gem 'unicorn'
end

group :development do
  gem 'i18n_generators'
end

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
  gem 'jquery-rails'
  gem 'less-rails'
  gem 'twitter-bootstrap-rails'
end
